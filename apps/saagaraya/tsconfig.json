{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": [
      "jest",
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "../../",
    "paths": {
      "@/assets/*": [
        "apps/saagaraya/assets/*"
      ],
      "@/components/*": [
        "apps/saagaraya/components/*"
      ],
      "@/modules/*": [
        "apps/saagaraya/modules/*"
      ],
      "@/models/*": [
        "apps/saagaraya/models/*"
      ],
      "@/actions/*": [
        "apps/saagaraya/actions/*"
      ],
      "@/constants/*": [
        "apps/saagaraya/constants/*"
      ]
      // "@kala-pavura/constants": ["@repo/globals"],
      // "@kala-pavura/db": ["@repo/globals"],
      // "@kala-pavura/models": ["libs/models/src/index.ts"],
      // "@kala-pavura/services": ["libs/services/src/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
